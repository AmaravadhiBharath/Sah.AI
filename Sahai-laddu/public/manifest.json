{
  "manifest_version": 3,
  "name": "SahAI Laddu",
  "version": "1.0.0",
  "description": "The ultimate AI prompt extractor and summarizer with structural scraping.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "sidePanel",
    "identity",
    "identity.email"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://perplexity.ai/*",
    "https://www.perplexity.ai/*",
    "https://chat.deepseek.com/*",
    "https://lovable.dev/*",
    "https://bolt.new/*",
    "https://cursor.sh/*",
    "https://www.cursor.com/*",
    "https://meta.ai/*",
    "https://www.meta.ai/*"
  ],
  "oauth2": {
    "client_id": "YOUR_CLIENT_ID.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://perplexity.ai/*",
        "https://www.perplexity.ai/*",
        "https://chat.deepseek.com/*",
        "https://lovable.dev/*",
        "https://bolt.new/*",
        "https://cursor.sh/*",
        "https://www.cursor.com/*",
        "https://meta.ai/*",
        "https://www.meta.ai/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "action": {
    "default_title": "SahAI Laddu"
  }
}
